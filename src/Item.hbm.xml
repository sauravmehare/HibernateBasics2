<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<!--FILL YOUR CODE -->
	<class name="Item" table="item">
		<id name="id" column="id" type="integer"></id>
		<property name="name" column="name" type="string"></property>
		<property name="category" column="category" type="string"></property>
		<property name="quantity" column="quantity" type="integer"></property>
		<property name="price" column="price" type="float"></property>
	</class>

</hibernate-mapping>